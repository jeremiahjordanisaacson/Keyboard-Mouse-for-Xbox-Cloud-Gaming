{
  "manifest_version": 2,
  "name": "Keyboard & Mouse for Xbox Cloud Gaming",
  "version": "1.0.0",
  "description": "Play Xbox Cloud Gaming (xCloud) with keyboard and mouse! Use WASD for movement, mouse for camera, and customizable key bindings for all controller buttons.",
  "permissions": [
    "storage",
    "activeTab",
    "https://www.xbox.com/*",
    "https://xbox.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.xbox.com/*/play*",
        "https://www.xbox.com/play*",
        "https://xbox.com/*/play*",
        "https://xbox.com/play*"
      ],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Xbox Cloud Gaming KB+M",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    "injected.js"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "xcloud-kbm@example.com",
      "strict_min_version": "91.0"
    }
  }
}
