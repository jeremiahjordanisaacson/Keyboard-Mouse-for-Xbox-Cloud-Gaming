{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "1.3.0",
  "description": "__MSG_extDescription__",
  "default_locale": "en",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://www.xbox.com/*",
    "https://xbox.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-controls": {
      "suggested_key": {
        "default": "Alt+Shift+X",
        "mac": "Alt+Shift+X"
      },
      "description": "Toggle keyboard/mouse controls on/off"
    },
    "next-profile": {
      "suggested_key": {
        "default": "Alt+Shift+P"
      },
      "description": "Switch to next game profile"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.xbox.com/*/play*",
        "https://www.xbox.com/play*",
        "https://xbox.com/*/play*",
        "https://xbox.com/play*"
      ],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Xbox Cloud Gaming KB+M"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://www.xbox.com/*", "https://xbox.com/*"]
    }
  ]
}
